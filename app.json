{
  "expo": {
    "name": "RightyLove",
    "slug": "rightylove",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "rightylove",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B9D"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rightylove.app",
      "infoPlist": {
        "NSCameraUsageDescription": "RightyLove needs camera access to scan QR codes for partner pairing",
        "NSPhotoLibraryUsageDescription": "RightyLove needs photo library access to add photos to your shared album"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B9D"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.rightylove.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "RightyLove needs camera access to scan QR codes for partner pairing"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "RightyLove needs photo library access to add photos to your shared album"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF6B9D"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
